<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wwq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.wwq.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        wwq:desc_off="自动更新已关闭"
        wwq:desc_on="自动更新已开启"
        wwq:setting_title="自动更新设置" />

    <com.wwq.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        wwq:desc_off="归属地显示已关闭"
        wwq:desc_on="归属地显示已开启"
        wwq:setting_title="归属地显示设置" />

    <com.wwq.view.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.wwq.view.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.wwq.view.SettingItemView
        android:id="@+id/siv_callsafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        wwq:desc_off="黑名单功能已关闭"
        wwq:desc_on="黑名单功能已开启"
        wwq:setting_title="黑名单功能设置" />

    <com.wwq.view.SettingItemView
        android:id="@+id/siv_watch_dog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        wwq:desc_off="看门狗已关闭"
        wwq:desc_on="看门狗已开启"
        wwq:setting_title="看门狗功能" />

</LinearLayout>